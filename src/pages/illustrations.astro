---
import Layout from '../layouts/Layout.astro';
import HeaderAlt from '../components/HeaderAlt.astro';
import AnimatedBackground from '../components/AnimatedBackground.astro';

---

<Layout title="Ilustraciones">
  <AnimatedBackground />
  <HeaderAlt />
  <nav class="fixed top-24 left-1/2 transform -translate-x-1/2 z-50 backdrop-blur-sm rounded-full shadow-lg px-2 py-1 md:px-4 md:py-2">
    <div class="grid grid-cols-2 gap-2 md:flex md:flex-row md:gap-4">
      <a href="#finales" class="px-2 py-1 text-[10px] md:text-base md:px-6 md:py-2 bg-[rgb(9,21,17)] text-white rounded-full hover:bg-[rgb(18,43,35)] transition-colors duration-300 text-center whitespace-nowrap overflow-hidden">Finales</a>
      <a href="#sketches" class="px-2 py-1 text-[10px] md:text-base md:px-6 md:py-2 bg-[rgb(9,21,17)] text-white rounded-full hover:bg-[rgb(18,43,35)] transition-colors duration-300 text-center whitespace-nowrap overflow-hidden">Sketches</a>
    </div>
  </nav>
  <main class="pt-[10vh] bg-[rgb(9,21,17)]/30 backdrop-blur-sm min-h-[90vh] text-white [text-shadow:_0_1px_2px_rgb(0_0_0_/_40%)] w-[90%] mx-auto rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-8 text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Mis Ilustraciones</h1>
    
    <!-- Sección Finales -->
    <section id="finales" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Finales</h2>
      <div class="grid grid-cols-1 grid-rows-10 md:grid-cols-2 md:gap-6 md:grid-rows-5 lg:grid-cols-2 lg:gap-6 lg:grid-rows-5 p-4 max-w-6xl mx-auto">
        <!-- Ilustración 1 -->
        <div class="aspect-[16/9] overflow-hidden rounded-lg shadow-lg relative group">
          <picture class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">
            <!--Imagen pequeña para pantallas menores a 600px-->
            <source srcset="/img/ilustraciones/genya_02_ilustracion_chica.jpg" type="image/jpeg" media="(max-width: 600px)">

            <!--Imagen mediana para pantallas entre 601px y 1024px-->
            <source srcset="/img/ilustraciones/genya_02_ilustracion_grande.jpg" type="image/jpeg" media="(min-width: 601px) and (max-width: 1024px)">

            <!--Imagen grande para pantallas mayores a 1025px-->
            <source srcset="/img/ilustraciones/genya_02_ilustracion_grande.jpg" type="image/jpeg">

            <img src="/img/ilustraciones/genya_02_ilustracion_grande.jpg" alt="Ilustracion 1 - Genya" class="w-full h-full object-cover group-hover:scale-105 transition-all duration-300">
          </picture>
          <div class="absolute bottom-0 left-0 p-4 bg-gradient-to-t from-black/80 to-transparent w-full">
            <h3 class="text-white text-xl font-bold">Genya</h3>
          </div>
        </div>
        <!-- Ilustración 2 -->
        <div class="aspect-[16/9] overflow-hidden rounded-lg shadow-lg relative group">
          <picture class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">
