---
import Layout from '../layouts/Layout.astro';
import HeaderAlt from '../components/HeaderAlt.astro';
import AnimatedBackground from '../components/AnimatedBackground.astro';
import ImageModal from '../components/ImageModal.astro';
import Footer from '../components/Footer.astro';

const projects = {
  illustrator: [
    {
      id: 'gojo',
      title: 'Gojo',
      description: 'Ilustración digital creada en Adobe Illustrator inspirada en el personaje Gojo de Jujutsu Kaisen. ',
      imageUrl: '/img/proyectos/gojo_illustrator_grande.jpg',
      year: '2024',
      category: 'Ilustración ',
      tools: ['Adobe Illustrator', 'Gradientes', 'Efectos de Luz'],
      materia: 'Geometria Vectorial'
    },
    {
      id: 'ateez',
      title: 'Ateez - Towards the light',
      description: 'Poster promocional creado para el grupo Ateez, inspirado en su concepto "Towards the light". Con el objetivo de dar una nueva imagen a su tour.',
      imageUrl: '/img/proyectos/proyectofinal_illustrator_grande.jpg',
      year: '2024',
      category: 'Ilustracion  Diseño',
      tools: ['Adobe Illustrator', 'Tipografía', 'Composición'],
      materia: 'Geometria Vectorial'
    },
    {
      id: 'rafayel',
      title: 'Rafayel stickers',
      description: 'Colección de stickers inspirados en un personaje de un videojuego llaamado Rafayel.',
      imageUrl: '/img/proyectos/stickers_illustrator_grande.jpg',
      year: '2024',
      category: 'Diseño de Stickers',
      tools: ['Adobe Illustrator', 'Diseño Vectorial'],
      materia: 'Geometria Vectorial'
    }
  ],
  animaciones: [
    {
      id: 'autoretrato',
      title: 'Autorretrato',
      description: 'Animación que explora la identidad y la expresión personal.',
      imageUrl: '/img/portadas/autoretrato_animacion_portada_grande.jpg',
      videoUrl: '/img/proyectos/autoretrato_animacion.mp4',
      year: '2025',
      category: 'Animación',
      tools: ['After Effects', 'Expresiones', 'Keyframes'],
      materia: 'Animacion 2D'
    },
    {
      id: 'pendulo',
      title: 'Pendulo',
      description: 'Animación que imita el movimiento de un péndulo, explorando ritmo y velocidad en los keyframes.',
      imageUrl: '/img/portadas/pendulo_animacion_portada_grande.jpg',
      videoUrl: '/img/proyectos/pendulo_animacion.mp4',
      year: '2025',
      category: 'Animación',
      tools: ['After Effects', 'Física', 'Expresiones'],
      materia: 'Animacion 2D'
    },
    {
      id: 'sonic',
      title: 'Sonic | Máscaras',
      description: 'Ejercicio de animacion basados en sonic para el uso de máscaras.',
      imageUrl: '/img/portadas/sonic_animacion_portada_grande.jpg',
      videoUrl: '/img/proyectos/mascaras_animacion.mp4',
      year: '2025',
      category: 'Animación',
      tools: ['After Effects', 'Máscaras', 'Composición'],
      materia: 'Animacion 2D'
    },
    {
      id: 'camaras',
      title: 'Cámaras',
      description: 'Animación que explora diferentes usos a través del movimiento de cámaras en after effects.',
      imageUrl: '/img/portadas/animacion_camaras_portada_grande.jpg',
      videoUrl: '/img/proyectos/camaras_animacion.mp4',
      year: '2025',
      category: 'Animación',
      tools: ['After Effects', 'Cámaras 3D', 'Composición'],
      materia: 'Animacion 2D'
    },
    {
      id: 'kuaki',
      title: 'Kuaki| Kamiru',
      description: 'Proyecto final basado en lo que seria mi intro para un canal personal.',
      imageUrl: '/img/portadas/animacion_final_portada_grande.jpg',
      videoUrl: '/img/proyectos/proyectofinal_animacion.mp4',
      year: '2025',
      category: 'Animación',
      tools: ['After Effects', 'Composición', 'Efectos'],
      materia: 'Animacion 2D'
    }
  ],
  processing: [
    {
      id: 'processing-final',
      title: 'Proyecto final',
      description: 'Proyecto final de Processing que explora la interacción entre el usuario y la animación generativa.',
      imageUrl: '/img/portadas/processing_portada_grande.jpg',
      videoUrl: '/img/proyectos/proyecto_final_processing.mp4',
      year: '2024',
      category: 'Programación Creativa',
      tools: ['Processing', 'Java', 'Interactividad'],
      materia: 'Fundamentos de Programacion'
    }
  ],
  imagenDigital: [
    {
      id: 'digital1',
      title: 'Ateez | Dune',
      description: 'Composición elegí la canción "Dune" por Ateez para crear una composición visual equilibrada y llamativa, utilizando herramientas de edición no destructiva. Utilizando elementos estilo cyberpunk  / apocalíptico como conceptos principales.',
      imageUrl: '/img/portadas/imagen_digital_album_grande.jpg',
      year: '2024',
      category: 'Imagen Digital',
      tools: ['Photoshop'],
      materia: 'Imagen digital'
    },
    {
      id: 'digital2',
      title: 'Dualidad Creativa',
      description: 'Este proyecto busca retratar las diferentes fases de creatividad que se manifiestan al momento de crear una obra/proyecto, darle lugar a la dualidad, las cosas positivas y negativas, donde los pensamientos nos consumen pero nos hacen explotar y explorar.',
      imageUrl: '/img/portadas/imagen_digital_collage_grande.jpg',
      year: '2024',
      category: 'Imagen Digital',
      tools: ['Photoshop'],
      materia: 'Imagen digital'
    }
  ]
};

const metadata = {
  title: "Proyectos | Kuaki",
  description: "Explora mi portafolio de proyectos creativos, incluyendo ilustraciones en Illustrator, animaciones, proyectos de Processing y diseño de imagen digital.",
  image: "/img/portadas/kuaki_portada_grande.jpg",
  url: "https://github.com/vramirezm07/alter-kuaki.git/work"
};
---

<Layout {...metadata}>
  <AnimatedBackground />
  <HeaderAlt />
  <nav class="fixed top-24 left-1/2 transform -translate-x-1/2 z-50 backdrop-blur-sm rounded-full shadow-lg px-2 py-1 md:px-4 md:py-2">
    <div class="grid grid-cols-2 gap-2 md:flex md:flex-row md:gap-4">
      <a href="#illustrator" class="px-2 py-1 text-[10px] md:text-base md:px-6 md:py-2 bg-[rgb(9,21,17)] text-white rounded-full hover:bg-[rgb(18,43,35)] transition-colors duration-300 text-center whitespace-nowrap overflow-hidden">Illustrator</a>
      <a href="#animaciones" class="px-2 py-1 text-[10px] md:text-base md:px-6 md:py-2 bg-[rgb(9,21,17)] text-white rounded-full hover:bg-[rgb(18,43,35)] transition-colors duration-300 text-center whitespace-nowrap overflow-hidden">Animaciones</a>
      <a href="#processing" class="px-2 py-1 text-[10px] md:text-base md:px-6 md:py-2 bg-[rgb(9,21,17)] text-white rounded-full hover:bg-[rgb(18,43,35)] transition-colors duration-300 text-center whitespace-nowrap overflow-hidden">Processing</a>
      <a href="#imagen-digital" class="px-2 py-1 text-[10px] md:text-base md:px-6 md:py-2 bg-[rgb(9,21,17)] text-white rounded-full hover:bg-[rgb(18,43,35)] transition-colors duration-300 text-center whitespace-nowrap overflow-hidden">Imagen Digital</a>
    </div>
  </nav>
  
  <!-- Modales fuera del main -->
  {projects.illustrator.map((project) => (
    <ImageModal
      id={`modal-${project.id}`}
      title={project.title}
      description={project.description}
      imageUrl={project.imageUrl}
      year={project.year}
      category={project.category}
      tools={project.tools}
      materia={project.materia}
    />
  ))}
  {projects.animaciones.map((project) => (
    <ImageModal
      id={`modal-${project.id}`}
      title={project.title}
      description={project.description}
      imageUrl={project.imageUrl}
      videoUrl={project.videoUrl}
      year={project.year}
      category={project.category}
      tools={project.tools}
      materia={project.materia}
    />
  ))}
  {projects.processing.map((project) => (
    <ImageModal
      id={`modal-${project.id}`}
      title={project.title}
      description={project.description}
      imageUrl={project.imageUrl}
      videoUrl={project.videoUrl}
      year={project.year}
      category={project.category}
      tools={project.tools}
      materia={project.materia}
    />
  ))}
  {projects.imagenDigital.map((project) => (
    <ImageModal
      id={`modal-${project.id}`}
      title={project.title}
      description={project.description}
      imageUrl={project.imageUrl}
      year={project.year}
      category={project.category}
      tools={project.tools}
      materia={project.materia}
    />
  ))}

  <main class="pt-[10vh] bg-[rgb(9,21,17)]/30 backdrop-blur-sm min-h-[90vh] text-white [text-shadow:_0_1px_2px_rgb(0_0_0_/_40%)] w-[90%] mx-auto rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-8 text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Proyectos</h1>
    
    <!-- Sección Illustrator -->
    <section id="illustrator" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Illustrator</h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 p-4 max-w-6xl mx-auto">
        {projects.illustrator.map((project) => (
          <div 
            class="aspect-[16/9] overflow-hidden rounded-lg shadow-lg relative group cursor-pointer"
            onclick={`document.getElementById('modal-${project.id}').classList.remove('hidden'); document.getElementById('modal-${project.id}').classList.add('flex'); document.body.style.overflow = 'hidden';`}
          >
            <picture class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">
              <source srcset={project.imageUrl.replace('grande', 'chica')} type="image/jpeg" media="(max-width: 600px)">
              <source srcset={project.imageUrl} type="image/jpeg">
              <img src={project.imageUrl} alt={project.title} class="w-full h-full object-cover group-hover:scale-105 transition-all duration-300">
            </picture>
            <div class="absolute bottom-0 left-0 p-4 bg-gradient-to-t from-black/80 to-transparent w-full">
              <h3 class="text-white text-lg md:text-xl font-bold">{project.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Sección Animaciones -->
    <section id="animaciones" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Animaciones</h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 p-4 max-w-6xl mx-auto">
        {projects.animaciones.map((project) => (
          <div 
            class="aspect-[16/9] overflow-hidden rounded-lg shadow-lg relative group cursor-pointer"
            onclick={`document.getElementById('modal-${project.id}').classList.remove('hidden'); document.getElementById('modal-${project.id}').classList.add('flex'); document.body.style.overflow = 'hidden';`}
          >
            <picture class="w-full h-full">
              <source srcset={project.imageUrl.replace('grande', 'chica')} type="image/jpeg" media="(max-width: 600px)">
              <source srcset={project.imageUrl} type="image/jpeg">
              <img src={project.imageUrl} alt={project.title} class="w-full h-full object-cover group-hover:scale-105 transition-all duration-300">
            </picture>
            <div class="absolute bottom-0 left-0 p-4 bg-gradient-to-t from-black/80 to-transparent w-full">
              <h3 class="text-white text-lg md:text-xl font-bold">{project.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Sección Processing -->
    <section id="processing" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Processing</h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 p-4 max-w-6xl mx-auto">
        {projects.processing.map((project) => (
          <div 
            class="aspect-[16/9] overflow-hidden rounded-lg shadow-lg relative group cursor-pointer"
            onclick={`document.getElementById('modal-${project.id}').classList.remove('hidden'); document.getElementById('modal-${project.id}').classList.add('flex'); document.body.style.overflow = 'hidden';`}
          >
            <picture class="w-full h-full">
              <source srcset={project.imageUrl.replace('grande', 'chica')} type="image/jpeg" media="(max-width: 600px)">
              <source srcset={project.imageUrl} type="image/jpeg">
              <img src={project.imageUrl} alt={project.title} class="w-full h-full object-cover group-hover:scale-105 transition-all duration-300">
            </picture>
            <div class="absolute bottom-0 left-0 p-4 bg-gradient-to-t from-black/80 to-transparent w-full">
              <h3 class="text-white text-lg md:text-xl font-bold">{project.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Sección Imagen Digital -->
    <section id="imagen-digital">
      <h2 class="text-2xl font-bold mb-6 text-center text-white [text-shadow:_0_2px_4px_rgb(0_0_0_/_50%)]">Imagen Digital</h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 p-4 max-w-6xl mx-auto">
        {projects.imagenDigital.map((project) => (
          <div 
            class="aspect-[16/9] overflow-hidden rounded-lg shadow-lg relative group cursor-pointer"
            onclick={`document.getElementById('modal-${project.id}').classList.remove('hidden'); document.getElementById('modal-${project.id}').classList.add('flex'); document.body.style.overflow = 'hidden';`}
          >
            <picture class="w-full h-full">
              <source srcset={project.imageUrl.replace('grande', 'chica')} type="image/jpeg" media="(max-width: 600px)">
              <source srcset={project.imageUrl} type="image/jpeg">
              <img src={project.imageUrl} alt={project.title} class="w-full h-full object-cover group-hover:scale-105 transition-all duration-300">
            </picture>
            <div class="absolute bottom-0 left-0 p-4 bg-gradient-to-t from-black/80 to-transparent w-full">
              <h3 class="text-white text-lg md:text-xl font-bold">{project.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>
<Footer/>

<style>
  html {
    height: 100%;
  }

  :global(body) {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 0;
    margin: 0;
    overflow-x: hidden;
  }

  main {
    flex: 1;
    overflow-y: auto;
    margin: 0 auto;
  }

  .content {
    margin: auto; 
  }

  @media (max-width: 640px) {
    nav a {
      font-size: 10px;
      padding: 0.25rem 0.5rem;
      max-width: 100%;
    }
  }
</style> 